<Window x:Class="LolEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Inibin Viewer" Height="450" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Row="0" Orientation="Horizontal" Background="#F0F0F0" Margin="0,0,0,5">
            <Button Name="BtnOpen" Content="Open .inibin/.troybin" Margin="5" Padding="10,5" Click="BtnOpen_Click"/>
            <Button Name="BtnSave" Content="Save Changes" Margin="5" Padding="10,5" Click="BtnSave_Click" IsEnabled="False"/>
            <Button Name="BtnAddProp" Content="Add Property" Margin="20,5,5,5" Padding="10,5" Click="BtnAddProp_Click" IsEnabled="False"/>
            <Button Name="BtnTestHash" Content="Test Hash" Margin="5" Padding="10,5" Click="BtnTestHash_Click"/>

            <Separator Margin="5,0" Width="2" Background="DarkGray"/>

            <TextBlock Text="Search:" VerticalAlignment="Center" Margin="5"/>
            <TextBox Name="TxtSearch" Width="150" VerticalAlignment="Center" Margin="5" Padding="2" TextChanged="TxtSearch_TextChanged" ToolTip="Press Ctrl+F to focus"/>
            <Button Name="BtnCopyAll" Content="Copy All Results" Margin="5" Padding="10,5" Click="BtnCopyAll_Click"/>
        </WrapPanel>

        <TreeView Grid.Row="1" Name="FileTree">
            <TreeView.Resources>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsExpanded" Value="True"/>
                </Style>
            </TreeView.Resources>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Properties}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding Hash, StringFormat=' ({0})'}" Foreground="Silver" FontSize="10" VerticalAlignment="Center"/>

                        <StackPanel.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Add Property..." Click="BtnAddProperty_Click"/>
                                <Separator/>
                                <MenuItem Header="Copy Section" Click="BtnCopySection_Click"/>
                            </ContextMenu>
                        </StackPanel.ContextMenu>
                    </StackPanel>

                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="Copy Property" Click="BtnCopyProperty_Click"/>
                                        <Separator/>
                                        <MenuItem Header="Delete Property" Click="BtnDeleteProperty_Click"/>
                                    </ContextMenu>
                                </StackPanel.ContextMenu>

                                <TextBlock Text="{Binding Name}" Foreground="Blue" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="=" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBox Text="{Binding ValueStr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" MinWidth="50" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding Hash, StringFormat='(Hash: {0})'}" Foreground="Gray" Margin="10,0,0,0" FontSize="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</Window>